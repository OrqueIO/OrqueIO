<?xml version="1.0" encoding="UTF-8"?>
<definitions id="definitions" 
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:orqueio="http://orqueio.io/schema/1.0/bpmn"
  targetNamespace="Examples">
  
  <process id="receiveTask" isExecutable="true">
  
    <extensionElements>
      <orqueio:executionListener class="io.orqueio.bpm.engine.test.standalone.history.VariableUpdateExecutionListener" event="start">
        <orqueio:field name="varName" stringValue="zVar1" />
      </orqueio:executionListener>
    </extensionElements>
  
    <startEvent id="theStart" />
    
    <sequenceFlow id="flow1" sourceRef="theStart" targetRef="serviceTask">
      <extensionElements>
        <orqueio:executionListener class="io.orqueio.bpm.engine.test.standalone.history.VariableUpdateExecutionListener">
          <orqueio:field name="varName" stringValue="zVar2" />
        </orqueio:executionListener>
      </extensionElements>
    </sequenceFlow>

    <serviceTask id="serviceTask" orqueio:class="io.orqueio.bpm.engine.test.standalone.history.VariableUpdateDelegate">
      <extensionElements>
        <orqueio:executionListener class="io.orqueio.bpm.engine.test.standalone.history.VariableUpdateExecutionListener" event="start">
          <orqueio:field name="varName" stringValue="zVar3" />
        </orqueio:executionListener>
        <orqueio:executionListener class="io.orqueio.bpm.engine.test.standalone.history.VariableUpdateExecutionListener" event="end">
          <orqueio:field name="varName" stringValue="zVar4" />
        </orqueio:executionListener>
      </extensionElements>
    </serviceTask>
    
    <sequenceFlow id="flow2" sourceRef="serviceTask" targetRef="waitState" />
    
    <receiveTask id="waitState" name="Wait State" />
    
    <sequenceFlow id="flow3" sourceRef="waitState" targetRef="theEnd" />
    
    <endEvent id="theEnd" />
    
  </process>

</definitions>