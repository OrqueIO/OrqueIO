<?xml version="1.0" encoding="UTF-8"?>
<definitions id="definitions"
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:orqueio="http://orqueio.io/schema/1.0/bpmn"
  targetNamespace="Examples">
  
  <signal id="alertSignal" name="alert" />

  <process id="throwSignal" isExecutable="true" orqueio:historyTimeToLive="5">

    <startEvent id="start" />

    <sequenceFlow sourceRef="start" targetRef="signal" />
    
    <intermediateThrowEvent id="signal">
      <signalEventDefinition signalRef="alertSignal" orqueio:async="true" />
    </intermediateThrowEvent>
    
    <sequenceFlow sourceRef="signal" targetRef="receiveTask" />
    
    <receiveTask id="receiveTask" />

    <sequenceFlow sourceRef="receiveTask" targetRef="end" />
    
    <endEvent id="end" />

  </process>

</definitions>
