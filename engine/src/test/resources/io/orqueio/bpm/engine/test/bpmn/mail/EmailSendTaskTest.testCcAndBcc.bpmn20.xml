<definitions 
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:orqueio="http://orqueio.io/schema/1.0/bpmn"
  targetNamespace="Examples">

  <process id="ccAndBcc"  isExecutable="true">

    <startEvent id="theStart" />
    <sequenceFlow sourceRef="theStart" targetRef="sendMail" />
    
    <sendTask id="sendMail" orqueio:type="mail">
      <extensionElements>
        <orqueio:field name="to">
          <orqueio:string>kermit@orqueio.io</orqueio:string>
        </orqueio:field>
        <orqueio:field name="subject">
          <orqueio:string>Hello world</orqueio:string>
        </orqueio:field>
        <orqueio:field name="text">
          <orqueio:string>This is the content</orqueio:string>
        </orqueio:field>
        <orqueio:field name="cc">
          <orqueio:string>fozzie@orqueio.io</orqueio:string>
        </orqueio:field>
        <orqueio:field name="bcc">
          <orqueio:string>mispiggy@orqueio.io</orqueio:string>
        </orqueio:field>
      </extensionElements>
    </sendTask>
    <sequenceFlow sourceRef="sendMail" targetRef="theEnd" />
    
    <endEvent id="theEnd" />

  </process>

</definitions>