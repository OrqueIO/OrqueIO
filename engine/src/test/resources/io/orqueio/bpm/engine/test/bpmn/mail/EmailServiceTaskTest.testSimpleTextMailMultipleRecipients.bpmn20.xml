<definitions 
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:orqueio="http://orqueio.io/schema/1.0/bpmn"
  targetNamespace="Examples">

  <process id="simpleTextOnlyMultipleRecipients"  isExecutable="true">

    <startEvent id="theStart" />
    <sequenceFlow sourceRef="theStart" targetRef="sendMail" />
    
    <serviceTask id="sendMail" orqueio:type="mail">
      <extensionElements>
        <orqueio:field name="to">
          <orqueio:string>kermit@orqueio.io, fozzie@orqueio.io,mispiggy@orqueio.io</orqueio:string>
        </orqueio:field>
        <orqueio:field name="subject">
          <orqueio:string>Hello Kermit!</orqueio:string>
        </orqueio:field>
        <orqueio:field name="text">
          <orqueio:string>This a text only e-mail.</orqueio:string>
        </orqueio:field>      
      </extensionElements>
    </serviceTask>
    <sequenceFlow sourceRef="sendMail" targetRef="theEnd" />
    
    <endEvent id="theEnd" />

  </process>

</definitions>