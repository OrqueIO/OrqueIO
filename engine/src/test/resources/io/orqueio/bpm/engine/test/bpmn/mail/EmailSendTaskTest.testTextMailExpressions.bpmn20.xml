<definitions 
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:orqueio="http://orqueio.io/schema/1.0/bpmn"
  targetNamespace="Examples">

  <process id="textMailExpressions"  isExecutable="true">

    <startEvent id="theStart" />
    <sequenceFlow sourceRef="theStart" targetRef="sendMail" />
    
    <sendTask id="sendMail" orqueio:type="mail">
      <extensionElements>
        <orqueio:field name="from">
          <orqueio:expression>${sender}</orqueio:expression>
        </orqueio:field>
        <orqueio:field name="to">
          <orqueio:expression>${recipient}</orqueio:expression>
        </orqueio:field>
        <orqueio:field name="subject">
          <orqueio:expression>${subject}</orqueio:expression>
        </orqueio:field>
        <orqueio:field name="text">
          <orqueio:expression>Hello ${recipientName}, this is an e-mail</orqueio:expression>
        </orqueio:field>      
      </extensionElements>
    </sendTask>
    <sequenceFlow sourceRef="sendMail" targetRef="theEnd" />
    
    <endEvent id="theEnd" />

  </process>

</definitions>
