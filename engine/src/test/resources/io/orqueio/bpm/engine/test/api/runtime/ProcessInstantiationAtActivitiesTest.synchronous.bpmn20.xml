<?xml version="1.0" encoding="UTF-8"?>
<definitions id="definitions" xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:orqueio="http://orqueio.io/schema/1.0/bpmn" targetNamespace="Examples">

  <process id="syncProcess" isExecutable="true">
    <extensionElements>
      <orqueio:executionListener event="start" class="io.orqueio.bpm.engine.test.bpmn.executionlistener.RecorderExecutionListener" />
      <orqueio:executionListener event="end" class="io.orqueio.bpm.engine.test.bpmn.executionlistener.RecorderExecutionListener" />
    </extensionElements>

    <startEvent id="start" />
    <sequenceFlow id="flow1" sourceRef="start" targetRef="syncTask" />
    <serviceTask id="syncTask" orqueio:expression="${true}">
      <extensionElements>
        <orqueio:executionListener event="start" class="io.orqueio.bpm.engine.test.bpmn.executionlistener.RecorderExecutionListener" />
        <orqueio:executionListener event="end" class="io.orqueio.bpm.engine.test.bpmn.executionlistener.RecorderExecutionListener" />
      </extensionElements>
    </serviceTask>
    <sequenceFlow id="flow2" sourceRef="syncTask" targetRef="end" />
    <endEvent id="end" />
  </process>

</definitions>