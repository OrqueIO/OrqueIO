<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="passwordPolicy" class="io.orqueio.bpm.engine.test.api.passwordpolicy.CustomPasswordPolicyImpl" />

  <bean id="processEngineConfiguration" class="io.orqueio.bpm.engine.impl.cfg.StandaloneInMemProcessEngineConfiguration">
    <property name="passwordPolicy" ref="passwordPolicy"/>
    <property name="enforceHistoryTimeToLive" value="false" />
  </bean>

</beans>