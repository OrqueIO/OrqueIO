#!/usr/bin/env groovy

pipeline {

    agent any

    tools {
        jdk 'jdk17'
        maven 'maven'
    }



    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }



    stages {

    	stage('Upload') {
    		steps {
                sh "mvn clean install -N -X"
                sh "cd bom && mvn clean install -DskipTests -X"
                sh "cd connect/bom && mvn clean install -DskipTests -X"
                sh "cd commons/bom && mvn clean install -DskipTests  -X"
                sh "cd test-utils/archunit && mvn clean install -DskipTests -X"
                sh "cd test-utils/testcontainers && mvn clean install -DskipTests -X"
                sh "mvn clean deploy  -X -Pcentral-sonatype-publish -DskipTests -Dclirr.skip=true"
	    	}
	 	}
    }

    post {
        always {
            cleanWs()
        }
    }
}
