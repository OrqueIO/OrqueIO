<definitions
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:orqueio="http://orqueio.io/schema/1.0/bpmn"
  targetNamespace="Examples">

  <process id="process" isExecutable="true">
    <startEvent id="start" />
    <userTask id="task1">
      <extensionElements>
        <orqueio:taskListener event="create">
          <orqueio:script scriptFormat="groovy">
            task.setVariable(task.eventName, true)
          </orqueio:script>
        </orqueio:taskListener>
        <orqueio:taskListener event="assignment">
          <orqueio:script scriptFormat="groovy">
            task.setVariable(task.eventName, true)
          </orqueio:script>
        </orqueio:taskListener>
        <orqueio:taskListener event="complete">
          <orqueio:script scriptFormat="groovy">
            task.setVariable(task.eventName, true)
          </orqueio:script>
        </orqueio:taskListener>
      </extensionElements>
    </userTask>
    <userTask id="task2">
      <extensionElements>
        <orqueio:taskListener event="delete">
          <orqueio:script scriptFormat="groovy">
            task.setVariable(task.eventName, true)
          </orqueio:script>
        </orqueio:taskListener>
      </extensionElements>
    </userTask>
    <endEvent id="end" />
    <sequenceFlow sourceRef="start" targetRef="task1" />
    <sequenceFlow sourceRef="task1" targetRef="task2" />
    <sequenceFlow sourceRef="task2" targetRef="end" />
  </process>
</definitions>
