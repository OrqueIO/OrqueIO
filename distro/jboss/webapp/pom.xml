<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <groupId>io.orqueio.bpm.jboss</groupId>
    <artifactId>orqueio-jboss</artifactId>
    <version>0.25.0-SNAPSHOT</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>io.orqueio.bpm.webapp</groupId>
  <name>Orque IO Platform - webapp - JBoss</name>
  <artifactId>orqueio-webapp-jboss</artifactId>
  <packaging>war</packaging>


  
  <properties>
    <!-- generate a bom of compile time dependencies for the license book.
    Note: Every compile time dependency will end up in the license book. Please
    declare only dependencies that are actually needed -->
    <skip-third-party-bom>false</skip-third-party-bom>
  </properties>

  <dependencies>
    <dependency>
      <groupId>io.orqueio.bpm.webapp</groupId>
      <artifactId>orqueio-webapp</artifactId>
      <version>${project.version}</version>
      <type>war</type>
      <scope>runtime</scope>
    </dependency>
  </dependencies>

  <build>
    <finalName>orqueio-webapp</finalName>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <configuration>
          <archive>
            <manifestEntries>
              <!-- module dependencies for deployment on JBoss/WildFly -->
              <Dependencies>io.orqueio.bpm.orqueio-engine,io.orqueio.bpm.dmn.orqueio-engine-dmn,io.orqueio.bpm.model.orqueio-bpmn-model,io.orqueio.bpm.model.orqueio-cmmn-model,io.orqueio.bpm.model.orqueio-dmn-model,io.orqueio.bpm.model.orqueio-xml-model,io.orqueio.commons.orqueio-commons-logging,io.orqueio.spin.orqueio-spin-core,io.orqueio.bpm.juel.orqueio-juel services,org.graalvm.js.js-scriptengine services</Dependencies>
            </manifestEntries>
          </archive>          
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
