<?xml version="1.0" encoding="UTF-8"?>
<definitions 
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:orqueio="http://orqueio.io/schema/1.0/bpmn"
  targetNamespace="Examples">

  <process id="testProcess" isExecutable="true">

    <startEvent id="start" />

    <sequenceFlow id="flow1"  sourceRef="start" targetRef="service" />

    <serviceTask id="service" orqueio:expression="${execution.setVariable('behaviorInvoked', execution.getVariable('behaviorInvoked') + 1)}">

      <extensionElements>

          <orqueio:executionListener
              event="start"
              expression="${execution.setVariable('listenerStartInvoked', true)}" />

          <orqueio:executionListener
              event="end"
              expression="${execution.setVariable('listenerEndInvoked', true)}" />
		 
        </extensionElements>

		<multiInstanceLoopCharacteristics isSequential="true" orqueio:asyncAfter="true">
 			<loopCardinality>5</loopCardinality>
		</multiInstanceLoopCharacteristics>		

    </serviceTask>

    <sequenceFlow id="flow2" sourceRef="service" targetRef="userTask" />

	<userTask id="userTask" name="waiting" />
	
	<sequenceFlow id="flow3" sourceRef="userTask" targetRef="end" />

    <endEvent id="end" />

  </process>

</definitions>
