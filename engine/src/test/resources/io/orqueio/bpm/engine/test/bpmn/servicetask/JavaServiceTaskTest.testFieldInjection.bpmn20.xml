<?xml version="1.0" encoding="UTF-8"?>
<definitions id="definitions" 
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:orqueio="http://orqueio.io/schema/1.0/bpmn"
  targetNamespace="Examples">
  
  <process id="fieldInjection" isExecutable="true">
  
    <startEvent id="theStart" />
    
    <sequenceFlow id="flow1" sourceRef="theStart" targetRef="javaService" />
    
    <serviceTask id="javaService" 
                 name="Java service invocation" 
                 orqueio:class="io.orqueio.bpm.engine.test.bpmn.servicetask.util.ToUpperCaseFieldInjected">
      <extensionElements>
        <orqueio:field name="text">
          <orqueio:string>Hello World</orqueio:string>
        </orqueio:field>
      </extensionElements>             
    </serviceTask>
    
    <sequenceFlow id="flow2" sourceRef="javaService" targetRef="javaService2" />
    
    <serviceTask id="javaService2" 
                 name="Java service invocation" 
                 orqueio:class="io.orqueio.bpm.engine.test.bpmn.servicetask.util.ToUpperCaseSetterInjected">
      <extensionElements>
        <orqueio:field name="text">
          <orqueio:string>Hello Setter</orqueio:string>
        </orqueio:field>
      </extensionElements>             
    </serviceTask>
    
    <sequenceFlow id="flow3" sourceRef="javaService2" targetRef="waitState" />
    
    <receiveTask id="waitState" />
    
    <sequenceFlow id="flow4" sourceRef="waitState" targetRef="theEnd" />
    
    <endEvent id="theEnd" />
    
  </process>

</definitions>