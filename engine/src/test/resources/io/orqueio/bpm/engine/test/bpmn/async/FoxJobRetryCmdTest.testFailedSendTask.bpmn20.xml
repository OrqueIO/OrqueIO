<?xml version="1.0" encoding="UTF-8"?>
<definitions id="definitions"
	xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
	xmlns:orqueio="http://orqueio.io/schema/1.0/bpmn"
	xmlns:fox="http://www.camunda.com/fox"
	targetNamespace="Examples">

	<process id="failedSendTask" isExecutable="true">

		<startEvent id="theStart" />
		<sequenceFlow id="flow1" sourceRef="theStart" targetRef="failingSendTask" />

		<sendTask id="failingSendTask" orqueio:type="mail" orqueio:async="true">
			<extensionElements>
	       		<fox:failedJobRetryTimeCycle>R5/PT5M</fox:failedJobRetryTimeCycle>
	       		<orqueio:field name="to">
					<orqueio:string>Hello Kermit!</orqueio:string>
				</orqueio:field>
				<orqueio:field name="subject">
					<orqueio:string>Hello Kermit!</orqueio:string>
				</orqueio:field>
				<orqueio:field name="text">
					<orqueio:string>This a text only e-mail.</orqueio:string>
				</orqueio:field>
			</extensionElements>
		</sendTask>
		
		<sequenceFlow id="flow2" sourceRef="failingSendTask" targetRef="theEnd" />
		
		<endEvent id="theEnd" />

	</process>
	
</definitions>