<?xml version="1.0" encoding="UTF-8"?>
<definitions id="definition" 
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:orqueio="http://orqueio.io/schema/1.0/bpmn"
  targetNamespace="Examples">
  
  <process id="miParallelSubprocess" isExecutable="true">
  
    <startEvent id="theStart" />
    <sequenceFlow id="flow1" sourceRef="theStart" targetRef="subprocess" />
    
    <subProcess id="subprocess">
      <extensionElements>
        <orqueio:inputOutput>
          <orqueio:inputParameter name="miCounterValue">${counter.incrementAndGet()}</orqueio:inputParameter>
          <orqueio:inputParameter name="loopCounter">${loopCounter}</orqueio:inputParameter>
        </orqueio:inputOutput>
      </extensionElements>
    
      <multiInstanceLoopCharacteristics isSequential="false">
        <loopCardinality>${nrOfLoops}</loopCardinality>
      </multiInstanceLoopCharacteristics>

      <startEvent id="startInScope" />
      <sequenceFlow id="flow2" sourceRef="startInScope" targetRef="task" />
      <userTask id="task" name="My Task" orqueio:assignee="kermit_${loopCounter}"/>
      <sequenceFlow id="flow3" sourceRef="task" targetRef="endInScope" />
      <endEvent id="endInScope" />
      
    </subProcess>
    
    <sequenceFlow id="flow4" sourceRef="subprocess" targetRef="task2" />
    
    <userTask id="task2" name = "After MI"/>
    
    <sequenceFlow id="flow5" sourceRef="task2" targetRef="theEnd" />
    <endEvent id="theEnd" />
    
  </process>

</definitions>