<?xml version="1.0" encoding="UTF-8"?>
<definitions id="definitions"
	xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
	xmlns:orqueio="http://orqueio.io/schema/1.0/bpmn"
	xmlns:fox="http://www.camunda.com/fox"
	targetNamespace="Examples">

	<process id="failingMultiInstance" isExecutable="true">

		<startEvent id="theStart" />
		<sequenceFlow id="flow1" sourceRef="theStart" targetRef="task" />

 		<userTask id="task" orqueio:asyncBefore="true">
			<extensionElements>
				<orqueio:executionListener event="start" class="io.orqueio.bpm.engine.test.cmd.FailingExecutionListener" />
	      <orqueio:failedJobRetryTimeCycle>R5/PT5M</orqueio:failedJobRetryTimeCycle>
	    </extensionElements>
      <multiInstanceLoopCharacteristics isSequential="true">
        <loopCardinality>5</loopCardinality>
      </multiInstanceLoopCharacteristics>
		</userTask>
        
		<sequenceFlow id="flow2" sourceRef="task" targetRef="theEnd" />
		
		<endEvent id="theEnd" />

	</process>
	
</definitions>