<definitions 
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:orqueio="http://orqueio.io/schema/1.0/bpmn"
  targetNamespace="Examples">
  
  <signal id="alertSignal" name="alert" />
  
  <process id="executionListenersProcess" isExecutable="true">
  
    
    <startEvent id="theStart" name="Start Event">
      <extensionElements>
        <orqueio:executionListener class="io.orqueio.bpm.engine.test.bpmn.executionlistener.RecorderExecutionListener" event="end">
          <orqueio:field name="parameter" stringValue="Start Event Listener" />
        </orqueio:executionListener>
      </extensionElements>
    </startEvent>

    <sequenceFlow sourceRef="theStart" targetRef="noneEvent" />    
    
    <intermediateThrowEvent  id="noneEvent" name="None Event">
      <extensionElements>
        <orqueio:executionListener class="io.orqueio.bpm.engine.test.bpmn.executionlistener.RecorderExecutionListener" event="end">
          <orqueio:field name="parameter" stringValue="Intermediate Catch Event Listener" />
        </orqueio:executionListener>
      </extensionElements>        
    </intermediateThrowEvent>
    
    <sequenceFlow sourceRef="noneEvent" targetRef="signalEvent" />

	<intermediateThrowEvent id="signalEvent" name="Signal Event" >
        <extensionElements>
          <orqueio:executionListener class="io.orqueio.bpm.engine.test.bpmn.executionlistener.RecorderExecutionListener" event="start">
            <orqueio:field name="parameter" stringValue="Intermediate Throw Event Listener" />
          </orqueio:executionListener>
        </extensionElements>        
        <signalEventDefinition signalRef="alertSignal" />     
	</intermediateThrowEvent>

    <sequenceFlow sourceRef="signalEvent" targetRef="theEnd" />

    <endEvent id="theEnd" name="End Event">
      <extensionElements>
        <orqueio:executionListener class="io.orqueio.bpm.engine.test.bpmn.executionlistener.RecorderExecutionListener" event="start">
          <orqueio:field name="parameter" stringValue="End Event Listener" />
        </orqueio:executionListener>
      </extensionElements>    
    </endEvent>
    
  </process>
</definitions>