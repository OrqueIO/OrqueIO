<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             xmlns:orqueio="http://orqueio.io/schema/1.0/bpmn"
             targetNamespace="Examples">

  <process id="process" isExecutable="true">

    <startEvent id="theStart" />

    <sequenceFlow sourceRef="theStart" targetRef="theService" />

    <serviceTask id="theService" orqueio:expression="${true}" />

    <sequenceFlow sourceRef="theService" targetRef="subProcess" />

    <subProcess id="subProcess">

      <startEvent id="innerStart" />

      <sequenceFlow sourceRef="innerStart" targetRef="innerService1" />

      <serviceTask id="innerService1" orqueio:expression="${true}" />

      <sequenceFlow sourceRef="innerService1" targetRef="fork" />

      <parallelGateway id="fork" />

      <sequenceFlow sourceRef="fork" targetRef="innerService2" />
      <serviceTask id="innerService2" orqueio:expression="${true}" />
      <sequenceFlow sourceRef="innerService2" targetRef="innerEnd1" />
      <endEvent id="innerEnd1">
        <extensionElements>
          <orqueio:executionListener event="start" class="io.orqueio.bpm.engine.test.standalone.entity.ExecutionOrderListener" />
        </extensionElements>
      </endEvent>

      <sequenceFlow sourceRef="fork" targetRef="innerService3" />
      <serviceTask id="innerService3" orqueio:expression="${true}" />
      <sequenceFlow sourceRef="innerService3" targetRef="innerEnd2" />
      <endEvent id="innerEnd2">
        <extensionElements>
          <orqueio:executionListener event="start" class="io.orqueio.bpm.engine.test.standalone.entity.ExecutionOrderListener" />
        </extensionElements>
      </endEvent>

    </subProcess>

    <sequenceFlow sourceRef="subProcess" targetRef="theService1" />

    <serviceTask id="theService1" orqueio:expression="${true}">
      <extensionElements>
        <orqueio:executionListener event="start" class="io.orqueio.bpm.engine.test.standalone.entity.ExecutionOrderListener" />
      </extensionElements>
    </serviceTask>

    <sequenceFlow sourceRef="theService1" targetRef="theEnd" />

    <endEvent id="theEnd" />

  </process>

</definitions>