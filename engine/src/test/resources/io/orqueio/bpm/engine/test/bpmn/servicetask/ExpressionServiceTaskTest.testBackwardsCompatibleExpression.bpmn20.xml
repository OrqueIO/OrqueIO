<?xml version="1.0" encoding="UTF-8"?>

<definitions id="definitions"
             xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             xmlns:orqueio="http://orqueio.io/schema/1.0/bpmn"
             targetNamespace="Examples">

    <process id="BackwardsCompatibleExpressionProcess" isExecutable="true">

        <startEvent id="theStart"/>

        <sequenceFlow sourceRef="theStart"
                      targetRef="delegate"/>

        <serviceTask id="delegate"
                     orqueio:class="io.orqueio.bpm.engine.test.bpmn.servicetask.util.BackwardsCompatibleExpressionDelegate">
		      <extensionElements>
		        <orqueio:field name="expression">
		          <orqueio:expression>...${var}...</orqueio:expression>
		        </orqueio:field>
          </extensionElements>
        </serviceTask>

        <sequenceFlow sourceRef="delegate"
                      targetRef="wait"/>

        <receiveTask id="wait"/>

    </process>

</definitions>
