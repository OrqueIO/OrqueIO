<definitions 
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:orqueio="http://orqueio.io/schema/1.0/bpmn"
  targetNamespace="Examples">

  <process id="htmlMail"  isExecutable="true">

    <startEvent id="theStart" />
    <sequenceFlow sourceRef="theStart" targetRef="sendMail" />
    
    <sendTask id="sendMail" orqueio:type="mail">
      <extensionElements>
        <orqueio:field name="to">
          <orqueio:string>kermit@orqueio.io</orqueio:string>
        </orqueio:field>
        <orqueio:field name="subject">
          <orqueio:string>Test</orqueio:string>
        </orqueio:field>
        <orqueio:field name="html">
          <orqueio:expression>
            <![CDATA[
              <html>
                <body>
                  Hello ${(gender.equals('male')) ? 'Mr.' : 'Mrs.'} <b>Kermit</b>
                </body>
              </html>
            ]]>
          </orqueio:expression>
        </orqueio:field>      
      </extensionElements>
    </sendTask>
    <sequenceFlow sourceRef="sendMail" targetRef="theEnd" />
    
    <endEvent id="theEnd" />

  </process>

</definitions>