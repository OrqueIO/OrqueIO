<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             xmlns:orqueio="http://orqueio.io/schema/1.0/bpmn"
             targetNamespace="Examples">

  <process id="process" isExecutable="true">

    <startEvent id="theStart">
      <extensionElements>
        <orqueio:executionListener event="start" class="io.orqueio.bpm.engine.test.standalone.entity.ExecutionOrderListener" />
      </extensionElements>
    </startEvent>

    <sequenceFlow sourceRef="theStart" targetRef="theService" />

    <serviceTask id="theService" orqueio:expression="${true}">
      <extensionElements>
        <orqueio:executionListener event="start" class="io.orqueio.bpm.engine.test.standalone.entity.ExecutionOrderListener" />
      </extensionElements>
    </serviceTask>

    <sequenceFlow sourceRef="theService" targetRef="fork" />

    <parallelGateway id="fork">
      <extensionElements>
        <orqueio:executionListener event="start" class="io.orqueio.bpm.engine.test.standalone.entity.ExecutionOrderListener" />
      </extensionElements>
    </parallelGateway>

    <sequenceFlow sourceRef="fork" targetRef="theService1" />
    <serviceTask id="theService1" orqueio:expression="${true}">
      <extensionElements>
        <orqueio:executionListener event="start" class="io.orqueio.bpm.engine.test.standalone.entity.ExecutionOrderListener" />
      </extensionElements>
    </serviceTask>
    <sequenceFlow sourceRef="theService1" targetRef="theEnd1" />
    <endEvent id="theEnd1" orqueio:asyncBefore="true">
      <extensionElements>
        <orqueio:executionListener event="start" class="io.orqueio.bpm.engine.test.standalone.entity.ExecutionOrderListener" />
      </extensionElements>
    </endEvent>

    <sequenceFlow sourceRef="fork" targetRef="theService2" />
    <serviceTask id="theService2" orqueio:expression="${true}">
      <extensionElements>
        <orqueio:executionListener event="start" class="io.orqueio.bpm.engine.test.standalone.entity.ExecutionOrderListener" />
      </extensionElements>
    </serviceTask>
    <sequenceFlow sourceRef="theService2" targetRef="theService3" />
    <serviceTask id="theService3" orqueio:expression="${true}">
      <extensionElements>
        <orqueio:executionListener event="start" class="io.orqueio.bpm.engine.test.standalone.entity.ExecutionOrderListener" />
      </extensionElements>
    </serviceTask>
    <sequenceFlow sourceRef="theService3" targetRef="theEnd2" />
    <endEvent id="theEnd2" orqueio:asyncBefore="true">
      <extensionElements>
        <orqueio:executionListener event="start" class="io.orqueio.bpm.engine.test.standalone.entity.ExecutionOrderListener" />
      </extensionElements>
    </endEvent>

  </process>

</definitions>