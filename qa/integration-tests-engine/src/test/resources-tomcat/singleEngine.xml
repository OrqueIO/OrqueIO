<?xml version="1.0" encoding="UTF-8"?>
<process-application xmlns="http://www.orqueio.io/schema/1.0/ProcessApplication" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.orqueio.io/schema/1.0/ProcessApplication http://www.orqueio.io/schema/1.0/ProcessApplication ">

  <process-engine name="engine1">
    <job-acquisition>default</job-acquisition>
    <configuration>io.orqueio.bpm.engine.impl.cfg.StandaloneProcessEngineConfiguration</configuration>
    <properties>
      <property name="history">full</property>
      <property name="databaseType">h2</property>
      <property name="databaseSchemaUpdate">create-drop</property>
      <property name="jdbcUrl">jdbc:h2:mem:engine1</property>
    </properties>
  </process-engine>

</process-application>
