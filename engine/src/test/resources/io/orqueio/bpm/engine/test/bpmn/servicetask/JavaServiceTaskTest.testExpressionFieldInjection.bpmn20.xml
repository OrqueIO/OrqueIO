<?xml version="1.0" encoding="UTF-8"?>
<definitions id="definitions" 
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:orqueio="http://orqueio.io/schema/1.0/bpmn"
  targetNamespace="Examples">
  
  <process id="expressionFieldInjection" isExecutable="true">
  
    <startEvent id="theStart" />
    
    <sequenceFlow id="flow1" sourceRef="theStart" targetRef="javaService" />
    
    <serviceTask id="javaService" 
                 name="Java service invocation" 
                 orqueio:class="io.orqueio.bpm.engine.test.bpmn.servicetask.util.ReverseStringsFieldInjected">
      <extensionElements>
        <orqueio:field name="text1">
          <orqueio:expression>${genderBean.getGenderString(gender)}</orqueio:expression>
        </orqueio:field>
        <orqueio:field name="text2">
          <orqueio:expression>Hello ${gender == 'male' ? 'Mr.' : 'Mrs.'} ${name}</orqueio:expression>
        </orqueio:field>
      </extensionElements>             
    </serviceTask>
    
    <sequenceFlow id="flow2" sourceRef="javaService" targetRef="waitState" />
    
    <receiveTask id="waitState" />
    
    <sequenceFlow id="flow3" sourceRef="waitState" targetRef="theEnd" />
    
    <endEvent id="theEnd" />
    
  </process>

</definitions>