<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="urn:maven:assembly:1.1.2">

  <id>distro</id>

  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <unpack>true</unpack>
      <includes>
        <include>io.orqueio.bpm.tomcat:orqueio-tomcat-assembly</include>
      </includes>
      <outputDirectory />
    </dependencySet>


    <dependencySet>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>**/META-INF/**</exclude>
        </excludes>
      </unpackOptions>
      <includes>
        <include>io.orqueio.bpm.distro:orqueio-sql-scripts:jar:*</include>
      </includes>
    </dependencySet>

    <dependencySet>
        <includes>
            <include>io.orqueio.bpm:orqueio-engine-rest-jakarta:war:*</include>
        </includes>
        <outputDirectory>server/apache-tomcat-${version.tomcat}/webapps/engine-rest</outputDirectory>
        <unpack>true</unpack>
    </dependencySet>

    <dependencySet>
        <includes>
            <include>io.orqueio.bpm.webapp:orqueio-webapp-tomcat-jakarta:war:*</include>
        </includes>
        <outputDirectory>server/apache-tomcat-${version.tomcat}/webapps/orqueio</outputDirectory>
        <unpack>true</unpack>
    </dependencySet>

    <dependencySet>
        <includes>
            <include>io.orqueio.bpm.example:orqueio-example-invoice-jakarta:war:*</include>
        </includes>
        <outputDirectory>server/apache-tomcat-${version.tomcat}/webapps/orqueio-invoice</outputDirectory>
        <unpack>true</unpack>
    </dependencySet>

  </dependencySets>

  <fileSets>
    <fileSet>
      <directory>../../orqueio-welcome</directory>
      <outputDirectory>server/apache-tomcat-${version.tomcat}/webapps/orqueio-welcome</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
