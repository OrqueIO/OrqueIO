<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <groupId>io.orqueio.bpm.jboss</groupId>
    <artifactId>orqueio-jboss</artifactId>
    <version>7.24.0-SNAPSHOT</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>io.orqueio.bpm.webapp</groupId>
  <name>Camunda Platform - webapp - JBoss</name>
  <artifactId>orqueio-webapp-jboss</artifactId>
  <packaging>war</packaging>

  <description>
    Note: 7.24.0 is the last community edition release published on Maven Central. This library will not receive any new versions or releases. However, if you are interested in extended maintenance you could look into our enterprise edition. Get in touch with us: https://camunda.com/contact/
  </description>
  
  <properties>
    <!-- generate a bom of compile time dependencies for the license book.
    Note: Every compile time dependency will end up in the license book. Please
    declare only dependencies that are actually needed -->
    <skip-third-party-bom>false</skip-third-party-bom>
  </properties>

  <dependencies>
    <dependency>
      <groupId>io.orqueio.bpm.webapp</groupId>
      <artifactId>camunda-webapp</artifactId>
      <version>${project.version}</version>
      <type>war</type>
      <scope>runtime</scope>
    </dependency>
  </dependencies>

  <build>
    <finalName>camunda-webapp</finalName>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <configuration>
          <archive>
            <manifestEntries>
              <!-- module dependencies for deployment on JBoss/WildFly -->
              <Dependencies>io.orqueio.bpm.camunda-engine,io.orqueio.bpm.dmn.camunda-engine-dmn,io.orqueio.bpm.model.camunda-bpmn-model,io.orqueio.bpm.model.camunda-cmmn-model,io.orqueio.bpm.model.camunda-dmn-model,io.orqueio.bpm.model.camunda-xml-model,io.orqueio.commons.camunda-commons-logging,io.orqueio.spin.camunda-spin-core,io.orqueio.bpm.juel.camunda-juel services,org.graalvm.js.js-scriptengine services</Dependencies>
            </manifestEntries>
          </archive>          
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
