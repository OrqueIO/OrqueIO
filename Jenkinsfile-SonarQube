pipeline {
    agent any

    tools {
        jdk 'jdk21'
        maven 'maven'
    }

    stages {
        stage('SonarQube analysis') {
            when { branch "upload-sonatype" }
            environment {
                scannerHome = tool 'scannerHome'
            }
            steps {
                withSonarQubeEnv('AWS SONAR') {
                    sh """
                        mvn clean verify sonar:sonar \
                          -Pcentral-sonatype-publish \
                          -DskipTests \
                          -Dsonar.projectKey=Orqueio
                    """
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
