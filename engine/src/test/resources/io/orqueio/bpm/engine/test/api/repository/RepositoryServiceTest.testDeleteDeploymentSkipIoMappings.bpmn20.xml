<?xml version="1.0" encoding="UTF-8"?>
<definitions 
  id="definitions" 
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:orqueio="http://orqueio.io/schema/1.0/bpmn"
  targetNamespace="Examples">

  <process id="ioMappingProcess" name="The One Task Process with io mappings" isExecutable="true">
	<documentation>This is a process for testing purposes</documentation>

    <startEvent id="theStart" />
    <sequenceFlow id="flow1" sourceRef="theStart" targetRef="theTask" />
    <userTask id="theTask" name="my task">
      <extensionElements>
        <orqueio:inputOutput>
          <orqueio:inputParameter name="inputMappingExecuted">${true}</orqueio:inputParameter>
          	<orqueio:outputParameter name="outputMappingExecuted">
          		<orqueio:script scriptFormat="javaScript">
			      <![CDATA[
			        throw 'Exception when output mapping is executed';
			      ]]>
            	</orqueio:script>
        	</orqueio:outputParameter>
        </orqueio:inputOutput>
      </extensionElements>
    </userTask>
    <sequenceFlow id="flow2" sourceRef="theTask" targetRef="theEnd" />
    <endEvent id="theEnd" />
  </process>

</definitions>