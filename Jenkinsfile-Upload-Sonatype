#!/usr/bin/env groovy

pipeline {

    agent any

    tools {
        jdk 'jdk21'
        maven 'maven'
    }



    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }



    stages {

    	stage('Upload') {
    		steps {
                sh "mvn clean install"
                sh "mvn clean deploy  -X -Pcentral-sonatype-publish -DskipTests -Dclirr.skip=true"
	    	}
	 	}
    }

    post {
        always {
            cleanWs()
        }
    }
}
